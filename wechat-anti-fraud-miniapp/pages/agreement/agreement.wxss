.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

.content {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  height: calc(100vh - 200rpx);
}

.text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666666;
  white-space: pre-wrap;
}
