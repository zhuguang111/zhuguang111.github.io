.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading,
.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.status {
  font-size: 24rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.record-content {
  margin-bottom: 20rpx;
}

.content-row {
  display: flex;
  margin-bottom: 16rpx;
}

.content-row .label {
  font-size: 26rpx;
  color: #999999;
  width: 100rpx;
}

.content-row .value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.content-desc {
  background: #f7f7f7;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.attachments {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.attachment-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.record-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.submit-time {
  font-size: 24rpx;
  color: #999999;
}
