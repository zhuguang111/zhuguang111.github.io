.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  font-size: 120rpx;
  line-height: 200rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin: 0 auto;
}

.title {
  display: block;
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.content {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.info-card {
  text-align: center;
  margin-bottom: 60rpx;
}

.info-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.info-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.login-section {
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.avatar-circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-face {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  animation: faceMove 1.5s ease-in-out infinite;
}

.avatar-eye {
  position: absolute;
  top: 30rpx;
  width: 24rpx;
  height: 24rpx;
  background: #333333;
  border-radius: 50%;
  animation: blink 3s infinite;
}

.avatar-eye.left {
  left: 20rpx;
}

.avatar-eye.right {
  right: 20rpx;
}

.avatar-mouth {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 15rpx;
  background: #333333;
  border-radius: 0 0 15rpx 15rpx;
  animation: smile 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(252, 182, 159, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 20rpx rgba(252, 182, 159, 0);
  }
}

@keyframes faceMove {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5rpx);
  }
}

@keyframes blink {
  0%, 45%, 55%, 100% {
    transform: scaleY(1);
  }
  50% {
    transform: scaleY(0.1);
  }
}

@keyframes smile {
  0%, 100% {
    width: 30rpx;
  }
  50% {
    width: 40rpx;
  }
}

