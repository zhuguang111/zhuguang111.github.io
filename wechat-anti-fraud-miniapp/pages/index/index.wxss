.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  font-size: 120rpx;
  line-height: 200rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin: 0 auto;
}

.title {
  display: block;
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.content {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.info-card {
  text-align: center;
  margin-bottom: 60rpx;
}

.info-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.info-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.login-section {
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.avatar-circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.avatar-wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: #ffffff;
  border-radius: 50%;
  animation: wave 1.5s ease-in-out infinite;
}

.avatar-wave::before {
  content: '';
  position: absolute;
  top: 30%;
  left: 30%;
  width: 24rpx;
  height: 24rpx;
  background: #667eea;
  border-radius: 50%;
}

.avatar-wave::after {
  content: '';
  position: absolute;
  top: 30%;
  right: 30%;
  width: 24rpx;
  height: 24rpx;
  background: #667eea;
  border-radius: 50%;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 20rpx rgba(102, 126, 234, 0);
  }
}

@keyframes wave {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(0.9);
  }
}

.login-btn {
  background: #1890ff;
  color: #ffffff;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

.user-info {
  text-align: center;
  margin: 60rpx 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.nickname {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.welcome {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

.action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
