.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 登录容器 */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-box {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 60rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: #1890ff;
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

/* 管理员容器 */
.admin-container {
  min-height: 100vh;
}

.header {
  background: #1890ff;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn {
  color: #ffffff;
  font-size: 28rpx;
}

.filter-bar {
  background: #ffffff;
  padding: 30rpx 40rpx;
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #f7f7f7;
}

.filter-item.active {
  background: #1890ff;
  color: #ffffff;
}

.loading,
.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.report-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-approved {
  background: #f6ffed;
  color: #52c41a;
}

.status-rejected {
  background: #fff1f0;
  color: #f5222d;
}

.report-body {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-row .label {
  font-size: 26rpx;
  color: #999999;
  width: 100rpx;
  flex-shrink: 0;
}

.info-row .value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.report-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-size: 24rpx;
  color: #999999;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.view-btn {
  background: #f7f7f7;
  color: #666666;
}

.approve-btn {
  background: #52c41a;
  color: #ffffff;
}

.reject-btn {
  background: #f5222d;
  color: #ffffff;
}
