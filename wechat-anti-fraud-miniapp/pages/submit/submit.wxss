.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.upload-section {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d9d9d9;
}

.upload-icon {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999999;
}

.image-item,
.video-item,
.file-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.image {
  width: 100%;
  height: 100%;
}

.video {
  width: 100%;
  height: 100%;
}

.file-item {
  background: #f7f7f7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.file-icon {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.file-name {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.remove-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  z-index: 1;
}

.upload-tip {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: #1890ff;
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
