.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.3);
}

.picker {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  min-height: 220rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20rpx;
  padding: 25rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.3);
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.upload-section {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(255, 255, 255, 0.8);
  transition: all 0.3s;
}

.upload-btn:active {
  transform: scale(0.95);
}

.upload-icon {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #ffffff;
}

.image-item,
.video-item,
.file-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.image {
  width: 100%;
  height: 100%;
}

.video {
  width: 100%;
  height: 100%;
}

.file-item {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.file-icon {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.file-name {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.remove-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 45rpx;
  height: 45rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: #ffffff;
  font-size: 32rpx;
  line-height: 45rpx;
  text-align: center;
  border-radius: 50%;
  z-index: 1;
  box-shadow: 0 2rpx 10rpx rgba(238, 90, 36, 0.3);
}

.upload-tip {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-top: 20rpx;
  background: #fff7e6;
  padding: 20rpx;
  border-radius: 15rpx;
  border-left: 5rpx solid #faad14;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
}
